<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
    <ui:with field='res' type='com.owb.playhelp.client.resources.Resources'/>
    
	<ui:style src="../resources/GlobalStyles.css">	
		.logoutLink {
			float: left;
			margin-left: 10px;
		}	
		.username {
			text-align: left;
		}
		.profilePicture {
			margin-left: 20px;
			text-align: left;
		}		
		.karmaDiv {
			float: left;
			margin-top: 5px; 
			width: 50px;
		}
		table {
			font: 11px/24px Verdana, Arial, Helvetica, sans-serif;
			font-style:bold;
			border-collapse: collapse;
			width: 220px;
			}
		
		th {
			padding: 0 0.5em;
			text-align: left;
			}
		
		tr.yellow td {
			background: #FFC;
			font-style:bold;
			}
		
		tr {
			height:10px;
			}
		td {
			}
		
		td.width {
			width: 90px;
			}
		
		td.adjacent {
			text-align: left;
			height:10px;
			}

		
	</ui:style>
	
	<g:HTMLPanel>
	  <table width="2">
	    <tr class="yellow">
		    <td class="width">
		    	<g:Image ui:field='profilePicture' width="92px" height="150px" resource='{res.owbLogo}' altText="Profile Picture"/>
		    </td>
		    <td class="adyacent">
		      4 Projects <br/>
		      5 Children <br/>
		      $650 <br/>
		    </td>
		</tr>
      </table>
      
	  <!-- 
	   	<div class="{style.karmaDiv}">
			<g:VerticalPanel ui:field='karmaPanel' horizontalAlignment="ALIGN_RIGHT">
			</g:VerticalPanel>
		</div> -->
	</g:HTMLPanel>
</ui:UiBinder> 