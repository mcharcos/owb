<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:app='urn:import:com.owb.playhelp.client'
	xmlns:owb='urn:import:com.owb.playhelp.client.view'>
	
    <ui:with field='res' type='com.owb.playhelp.client.resources.Resources'/>
    
	<ui:style>
		.titleMenu {
			font-weight: bold;
			text-align					:  	center;
			color						:	red;
		    font-size                   :   x-large;
            font-family                 :   sans-serif, 'Comic Sans MS';
			font-style					:	italic;
		}

		.gwt-MenuBar
		{
		    margin                      :   0 auto;
		    padding                     :   0px;
		    width    					: 	100%;
			text-align					:  	center;
			font-style					:	italic;
		}
		.gwt-MenuBar table
		{
		    background-color            :   #c5f935;
			border						:	0px;
		}
		.gwt-MenuBar .gwt-MenuItem .gwt-MenuBar
		{
		    margin                      :   0 auto;
		    background-color            :   #c5f935;
		    padding                     :   0px;
		    width    					: 	100%;
			text-align					:  	center;
			font-style					:	italic;
		}
		.gwt-MenuBar .gwt-MenuItem .gwt-MenuBar table
		{
		    background-color            :   #c5f935;
			border						:	0px;
		}
		.gwt-MenuBar .gwt-MenuItem
		{
		
		    cursor                      :   hand;
		    cursor                      :   pointer;
		
		    font-size                   :   x-large;
			height						:	50px;
            font-family                 :   'Comic Sans MS';
            font-weight 				:	bold;
		    background-color            :   #c5f935;
		    padding                     :   0px;
			text-color					:	red;
			text-shadow					: 	none;
		}
		.gwt-MenuBar .gwt-MenuItem-selected
		{
		    background-color            :   #c5f935;
		    font-size                   :   x-large;
			font-color					:	red;
		}
		.backgroundall {  
	        background-color: #c5f935;
         }  
	</ui:style>
	
