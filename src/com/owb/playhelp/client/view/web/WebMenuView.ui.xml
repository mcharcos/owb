	<g:HTMLPanel>
		<table>
		<tr>
		    <div class='{style.titleMenu}'>About Us</div>
		</tr> 
		<tr>
	  		<div class='{style.gwt-MenuBar}'>
	  		<g:MenuBar ui:field='mainMenu' vertical="true">
				<g:MenuItem ui:field='missionItem'><font color="#ab0fc8"><b><i><big>Mission</big></i></b></font></g:MenuItem>
				<g:MenuItem ui:field='goalsItem'><font color="#ab0fc8"><b><i><big>Goals</big></i></b></font></g:MenuItem>
				<g:MenuItem ui:field='differentItem'><font color="#ab0fc8"><b><i><big>Are we Different?</big></i></b></font></g:MenuItem>
				<g:MenuItem ui:field='probsolItem'><font color="#ab0fc8"><b><i><big>Problems and Solitions</big></i></b></font></g:MenuItem>
				<g:MenuItem ui:field='teamItem'><font color="#ab0fc8"><b><i><big>The Team</big></i></b></font></g:MenuItem>
				<g:MenuItem ui:field='joinusItem'><font color="#ab0fc8"><b><i><big>Join Us</big></i></b></font></g:MenuItem>
				<g:MenuItem ui:field='joinItem'>
				    <font color="#ab0fc8"><b><i><big>Join Network</big></i></b></font>
			         <g:MenuBar vertical="true">
      					<g:MenuItem ui:field='addNgoItem'><font color="#ab0fc8"><b><i><big>As Organization</big></i></b></font></g:MenuItem>
      					<g:MenuItem ui:field='addOrphanageItem'><font color="#ab0fc8"><b><i><big>As Orphanage</big></i></b></font></g:MenuItem>
     				</g:MenuBar>
			    </g:MenuItem>
	 		 </g:MenuBar>
	 		 </div>
	    </tr>
		</table>
	</g:HTMLPanel>
</ui:UiBinder> 