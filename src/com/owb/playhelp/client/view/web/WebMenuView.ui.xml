		    padding						: 	5px 5px 5px 0px;
		}
		.gwt-MenuItem .gwt-PushButton-down-hovering 
		{
			background-color: #FA58D0;
			cursor: pointer;
			cursor: hand;
		}
		a, a:visited, a:hover {
  			color: #FA58D0;
		}
		.gwt-MenuBar a:hover {
  			color: #FA58D0;
		}
		.gwt-MenuItem a:hover {
  			color: #FA58D0;
		}
