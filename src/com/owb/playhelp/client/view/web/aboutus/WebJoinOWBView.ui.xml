<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field='res' type='com.owb.playhelp.client.resources.Resources'/>
	<ui:style src="../../../resources/GlobalStyles.css" >
		.important {
			font-weight: bold;
		}
		.description{
	        color:#9152a0;
	        margin: 30px;
	   }
	</ui:style>
	<g:HTMLPanel>
	   <div class="{style.description}">
	    <h1>VOLUNTEER OPPORTUNITIES</h1>

		<table align="left">
    		<tr>
    			<td>
		        <g:Image url='{res.volunteerWebPic.getSafeUri.asString}'/>
	    		</td>
	    	</tr>
    		<tr>
		        <td width="570">
		        We meet every Friday at 12 PM (Pacific Standard Time).
		        <br></br>
				While our meetings are held in Mountain View, CA, we also have the option
				of video-conferencing through Google Hangouts or Skype.<br></br>
				<br></br>
				Please fill out the volunteering form to join us or 
				to view our current volunteer opportunities or 
			    contact us at <b>owb@orphanagewithoutborders.org</b> for requesting information about our organization or share
			    your interests for helping children.
	    		</td>
	    	</tr>
	    	<tr><td>

		<div class="{style.formTitle}">Required Information</div>
			<div class="{style.formwrapper}">
				<div class="{style.formlabel}">
					<g:Label >Name *</g:Label>
				</div>
				<div class="{style.formfield}">
					<g:TextBox ui:field='nameField' width="25em"></g:TextBox>
				</div>
			</div>
			<div class="{style.formwrapper}">
				<div class="{style.formlabel}">
					<g:Label >Email *</g:Label>
				</div>
				<div class="{style.formfield}">
					<g:TextBox ui:field='emailField' width="25em"></g:TextBox>
				</div>
			</div>
			<div class="{style.formwrapper}">
				<div class="{style.formlabel}">
					<g:Label >Address * (City/Country)</g:Label>
				</div>
				<div class="{style.formfield}">
					<g:TextBox ui:field='addressField' width="25em"></g:TextBox>
				</div>
			</div>
			
		<div class="{style.formTitle}">Which activities would you like to be involved?</div>
		<g:VerticalPanel>
			<g:CheckBox ui:field='question1'>Website development (programming)</g:CheckBox>
			<g:CheckBox ui:field='question2'>Website development (programming)</g:CheckBox>
			<g:CheckBox ui:field='question3'>Website development (design)</g:CheckBox>
			<g:CheckBox ui:field='question4'>Fundraising</g:CheckBox>
			<g:CheckBox ui:field='question5'>Researching the needs of orphans and street children</g:CheckBox>
			<g:CheckBox ui:field='question6'>Researching existing organizations that target a specific need</g:CheckBox>
			<g:CheckBox ui:field='question7'>Researching existing organizations in a particular location</g:CheckBox>
			<g:CheckBox ui:field='question8'>Recruiting more volunteers to help us</g:CheckBox>
			<g:CheckBox ui:field='question9'>Gathering and creating the documentation needed for the 501(c)3 registration</g:CheckBox>
			<g:CheckBox ui:field='question10'>Developing an improvement plan for an orphanage </g:CheckBox>
		</g:VerticalPanel>
			<br></br>
			<div class="{style.formwrapper}">
				<div class="{style.formlabel}">
					<g:Label >Explain further your interests:</g:Label>
				</div>
				<div class="{style.formfield}">
					<g:TextArea ui:field='descField' width="25em" height="15em"></g:TextArea>
				</div>
			</div>
			
		<div class="{style.formTitle}">Additional Information</div>
			<div class="{style.formwrapper}">
				<div class="{style.formlabel}">
					<g:Label >Phone</g:Label>
				</div>
				<div class="{style.formfield}">
					<g:TextBox ui:field='phoneField' width="25em"></g:TextBox>
				</div>
			</div>
			<div class="{style.formwrapper}">
				<div class="{style.formlabel}">
					<g:Label >Website</g:Label>
				</div>
				<div class="{style.formfield}">
					<g:TextBox ui:field='webField' width="25em"></g:TextBox>
				</div>
			</div>
		<div class='{style.button}'>
			<g:Anchor href='javascript:;' ui:field='saveBut'>Save</g:Anchor>
			<g:Anchor href='javascript:;' ui:field='cancelBut'>Cancel</g:Anchor>
		</div>
		<div ui:field='nameDiv' />
		</td></tr>
	    </table>
		</div>		
	</g:HTMLPanel>
</ui:UiBinder> 