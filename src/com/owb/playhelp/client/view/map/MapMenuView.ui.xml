<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
		.titleMenu {
			font-weight					:	bold;
			text-align					:  	center;
			color						:	red;
            font-family                 :   sans-serif, 'Comic Sans MS';
			font-style					:	italic;
		}

		.gwt-MenuBar
		{
		    margin                      :   0 auto;
		    padding                     :   0px;
		    width    					: 	100%;
			text-align					:  	center;
			font-style					:	italic;
		}
		.gwt-MenuBar table
		{
			border						:	0px;
		}
		.gwt-MenuBar .gwt-MenuItem .gwt-MenuBar
		{
		    margin                      :   0 auto;
		    background-color            :   #c5f935;
		    padding                     :   0px;
		    width    					: 	100%;
			text-align					:  	center;
			font-style					:	italic;
		}
		.gwt-MenuBar .gwt-MenuItem .gwt-MenuBar table
		{
		    background-color            :   #c5f935;
			border						:	0px;
		}
		.gwt-MenuBar .gwt-MenuItem
		{
		
		    cursor                      :   hand;
		    cursor                      :   pointer;
		
		    font-size                   :   medium;
			height						:	35px;
			width						:	20px;
            font-family                 :   'Comic Sans MS';
            font-weight 				:	bold;
		    background-color            :   #c5f935;
		    padding                     :   0px;
			text-color					:	red;
			text-shadow					: 	none;
		}
		.gwt-MenuBar .gwt-MenuItem-selected
		{
		    background-color            :   #c5f935;
		    font-size                   :   medium;
			font-color					:	red;
		}
		.backgroundall {  
	        background-color: #c5f935;
         }  
	</ui:style>
	<g:HTMLPanel>
		<table>
		<tr>
	  		<div class='{style.gwt-MenuBar}'>
	  		<g:MenuBar ui:field='mainMenu' vertical="false">
				<g:MenuItem ui:field='mapItem'><font color="#ab0fc8"><b><i>Map</i></b></font></g:MenuItem>
				<g:MenuItem><font color="#ab0fc8"><b><i>Search</i></b></font></g:MenuItem>
				<g:MenuItem><font color="#ab0fc8"><b><i>Settings</i></b></font></g:MenuItem>
	 		 </g:MenuBar>
	 		 </div>
	    </tr>
		</table>
	</g:HTMLPanel>
</ui:UiBinder> 