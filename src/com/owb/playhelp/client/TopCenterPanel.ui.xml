<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
    
    <ui:with field='res' type='com.owb.playhelp.client.resources.Resources'/>
     
	<ui:style>
		.logo_small {
			background-color            :   #8bff2d;
			width                       :   311px;
			height                      :   80px;
		}
		.logo_bar {
			background-color            :   #8bff2d;
			width                       :   60px;
			height                      :   60px;
		}
		.mainBar {
			background-color            :   #8bff2d;
		}
		.important {
			font-weight: bold;
	        background-color			:	#8bff2d;
		}
		.backgroundall {  
	        background-color			:	#8bff2d;
			height                      :   60px;
			margin						:	0px;
         }  
	</ui:style>
	<g:HorizontalPanel styleName='{style.backgroundall}'>
	   <g:Image ui:field='owbPanel' resource='{res.name3Logo}' />
	   <g:Image resource='{res.bar3Logo}' width='250px'/>
	   <!--
	   <g:Image ui:field="newsPanel" resource='{res.newsLogo2}' />
	   <g:Image ui:field="worldPanel" resource='{res.worldLogo2}' />
	   <g:Image ui:field="friendPanel" resource='{res.friendLogo2}' />
	   -->
	   <g:HorizontalPanel ui:field="userSettings"  styleName='{style.backgroundall}'/>
	   <g:Image resource='{res.bar3Logo}' width='100%'/>
	   <!-- <g:Label width='600px' styleName='{style.backgroundall}' /> -->
	</g:HorizontalPanel>
</ui:UiBinder>