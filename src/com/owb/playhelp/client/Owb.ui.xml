	<ui:style src="resources/GlobalStyles.css"> 
		@sprite .backgroundall {  
	        background-color: #f9f184;
            gwt-image: 'backall'; 
			position: absolute;  
         }  
         .panelStyle{
			width: 100%;
			height:100%;
            background-color:white;
		}
         .horizontalCenterStyle{
			width: 100%;
			height: 100%;
            background-color:white;
		}
         .horizontalTopStyle{
			height: 50px;
            background-color: #b314d5;
		}
         .horizontalBarStyle{
			width: 100%;
			height: 50px;
            background-color:#8bff2d;
		}
         .footerPanel{
			width: 90%;
			height: 100%;
            background-color:white;
            text-align:right;
		}
         .junkTest{
			width: 100%;
			height: 100%;
            background-color:white;
            text-align:left;
			margin-top: 0px; 
		}

	</ui:style>
	

	<g:DockLayoutPanel unit='EM' styleName='{style.panelStyle}'> 
		<g:center size='100'>
